/**
 *  Exclusive-or gate.  out = a xor b.
 */

CHIP Xor {

    IN  a, b;
    OUT out;

    PARTS:
    Nand(a=a,b=b,out=nand);
    Or(a=a,b=b,out=or);
    And(a=or,b=nand,out=out);
}
